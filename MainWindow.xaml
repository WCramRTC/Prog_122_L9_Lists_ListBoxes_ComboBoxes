<Window x:Class="Prog_122_L9_Lists_ListBoxes_ComboBoxes.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Prog_122_L9_Lists_ListBoxes_ComboBoxes"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Canvas x:Name="canvasDisplay" Background="#FFD08989">
        <RichTextBox HorizontalAlignment="Left" VerticalAlignment="Center" Width="346" Height="244" Canvas.Left="414" Canvas.Top="73">
            <FlowDocument>
                <Paragraph>
                    <Run x:Name="rtbDisplay"/>
                </Paragraph>
            </FlowDocument>
        </RichTextBox>

        <ListBox x:Name="lBoxNames" Height="217" Width="343" d:ItemsSource="{d:SampleData ItemCount=5}" Canvas.Left="38" Canvas.Top="30"/>

        <ComboBox x:Name="cbxColors" Canvas.Left="38" Canvas.Top="303" Width="343" HorizontalAlignment="Left" VerticalAlignment="Center"/>
        <Button x:Name="btnDisplaySelected" Content="Display Selected Index" Canvas.Left="84" Canvas.Top="357" HorizontalAlignment="Left" VerticalAlignment="Top" Width="297" Click="btnDisplaySelected_Click"/>

    </Canvas>
</Window>
